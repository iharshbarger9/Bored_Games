<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/tv_profile_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:text="@string/profile_display_name"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_profile_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_profile_title" />

    <TextView
        android:id="@+id/tv_profile_display_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="@string/profile_display_picture"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/iv_profile_display_picture"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="@+id/tv_profile_display_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_profile_display_name" />

    <TextView
        android:id="@+id/tv_profile_title"
        android:layout_width="128dp"
        android:layout_height="37dp"
        android:layout_marginTop="40dp"
        android:text="@string/profile_title"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_profile_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_profile_display_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_profile_title" />

    <Button
        android:id="@+id/bt_profile_set_profile"
        android:layout_width="273dp"
        android:layout_height="90dp"
        android:text="@string/profile_set_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_profile_display_picture" />

    <ImageView
        android:id="@+id/iv_profile_display_picture"
        android:layout_width="108dp"
        android:layout_height="114dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/et_profile_display_name"
        app:layout_constraintStart_toStartOf="@+id/et_profile_display_name"
        app:layout_constraintTop_toBottomOf="@+id/et_profile_display_name"
        app:srcCompat="@drawable/blank_profile_picture" />

</androidx.constraintlayout.widget.ConstraintLayout>