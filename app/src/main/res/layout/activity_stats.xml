<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatsActivity">

    <TextView
        android:id="@+id/tv_stats_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_toolbar_header"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/tb_stats"
        app:layout_constraintEnd_toEndOf="@+id/tb_stats"
        app:layout_constraintStart_toStartOf="@+id/tb_stats"
        app:layout_constraintTop_toTopOf="@+id/tb_stats" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>